<div class="container">
    <div class="row mt-5">
        {{#each mangas}}
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> {{title}}</h5>
                    <p class="card-text ">Auteur : {{author}}</p>
                    <p class="card-text ">Genre : {{kind}}</p>
                    <p class="card-text ">Nombre de tomes : {{volume}}</p>
                    <p class=" card-img ">{{image_url}}</p>
                    <hr>
                </div>
            </div>
        </div>
        <!-- Modal -->
        {{#if @root.isAdmin}}
        <div class="modal fade" id="Modal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger-subtle ">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Suppression d'article</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Voulez-vous supprimer l'article définitivement? : {{title}}
                    </div>
                    <div class="modal-footer">
                        <form action="/article/delete/{{id}}" method="post">
                            <button type="submit" class="btn bg-danger-subtle border-white">Supprimer
                                définitivement</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
        <!-- Modal Supprimer a refaire -->
        <div class="modal fade" id="Modal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header bg-danger-subtle ">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Suppression d'article</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Voulez-vous supprimer l'article définitivement? : {{title}}
                    </div>
                    <div class="modal-footer">
                        <form action="/article/delete/{{id}}" method="post">
                            <button type="submit" class="btn bg-danger-subtle border-white">Supprimer
                                définitivement</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        {{/each}}
        {{#unless mangas}}
        <div class="col-md-12">
            <div class="alert alert-danger" role="alert">
                Il n'y a pas d'articles disponibles pour le moment.
            </div>
        </div>
        {{/unless}}
    </div>
</div>