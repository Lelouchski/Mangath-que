<div class="container">
    <div class="row mt-5">
        {{#each mangas}}
        <div class="col-md-6 mb-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="card custom-card">
                        <img src="/{{image_url}}" class="img-fluid card" alt="Image du manga">
                        <div class="card-overlay position-absolute top-0 start-0 bottom-0 end-0 d-flex justify-content-center align-items-center">
                            <div class="overlay-content text-center">
                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">Auteur: {{author}}</p>
                                <p class="card-text">Genre: {{kind}}</p>
                                <p class="card-text">Nombre de tomes: {{volume}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3">
                        <h5>Synopsis</h5>
                        <p><strong>{{description}}</strong></p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>