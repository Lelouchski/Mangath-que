<div class="container">
    <div class="row mt-5">
        {{#each mangas}}
        <div class="col-md-6 mb-3">
            <div class="row">
                <div class="col-md-6">
                    <div class="card custom-card">
                        <img src="/{{image_url}}" class="img-fluid card" alt="Image du manga">
                        <div
                            class="card-overlay position-absolute top-0 start-0 bottom-0 end-0 d-flex justify-content-center align-items-center">
                            <div class="overlay-content text-center">
                                <h5 class="card-title">{{title}}</h5>
                                <p class="card-text">Auteur: {{author.name}}</p>
                                <p class="card-text">Genre: {{kind.Name}}</p>
                                <p class="card-text">Nombre de tomes: {{volume}}</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="p-3">
                        <h5>Synopsis</h5>
                        <hr>
                        <p>{{description}}</p>
                        <div class="col-md-6 mb-3">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="p-3">
                                        <form action="/Readlist/{{mangas.id}}" method="post">
                                            <button type="submit" class="btn border-0">
